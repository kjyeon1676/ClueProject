<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:id="@+id/relativeLayout"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:id="@+id/button3"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/weaponSpinner"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/weaponSpinner"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/textView23"
            android:layout_alignEnd="@+id/textView23" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/playerSpinner"
            android:layout_above="@+id/weaponSpinner"
            android:layout_toLeftOf="@+id/textView23"
            android:layout_toStartOf="@+id/textView23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="에서"
            android:id="@+id/textView21"
            android:layout_above="@+id/playerSpinner"
            android:layout_toLeftOf="@+id/textView23"
            android:layout_toStartOf="@+id/textView23"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="로 기절시켰다!!"
            android:id="@+id/textView22"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/weaponSpinner"
            android:layout_toEndOf="@+id/weaponSpinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(이)가"
            android:id="@+id/textView23"
            android:layout_alignEnd="@+id/button3"
            android:layout_marginTop="90dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/roomSpinner"
            android:layout_above="@+id/playerSpinner"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3" />
    </RelativeLayout>
</LinearLayout>